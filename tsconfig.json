{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strictPropertyInitialization": false, // Disable ts(2564)
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "src/infra/mongo/**/*",
    "src/**/*.ts",
  ],
}
